{
  "compilerOptions": {
    "target": "esnext", // 编译目标平台
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false, // 在表达式和声明上有隐含的any类型时报错
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node", // 模块的解析
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/plugins/element.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
